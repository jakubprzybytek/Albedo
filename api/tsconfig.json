{
  "extends": "../tsconfig.json",
  "include": ["functions/**/*.ts", "math"],
  "compilerOptions": {
    "module": "esnext",
    "target": "es2021",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": {
      "@math": ["./math"],
      "@math/*": ["./math/*"],
      "@jpl": ["./math/jpl"],
      "@jpl/*": ["./math/jpl/*"]
    }
  },
  "ts-node": {
      "esm": true
  }
}
